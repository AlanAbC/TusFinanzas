<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="0dp"
    android:orientation="vertical"
    android:gravity="bottom">

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:id="@+id/txt_categoria"
        android:paddingLeft="25dp"
        android:textColor="#191919"
        android:text="NOMBRE CATEGORIA" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_verde"
        android:id="@+id/img_mas"
        android:src="@drawable/mas"
        android:padding="7dp"
        android:layout_toRightOf="@id/txt_categoria"/>

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_mas"
        android:hint="$"
        android:inputType="numberSigned"
        android:id="@+id/edit_porcentaje"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_roja"
        android:id="@+id/img_menos"
        android:src="@drawable/menos"
        android:padding="7dp"
        android:layout_toRightOf="@id/edit_porcentaje"/>



</RelativeLayout>